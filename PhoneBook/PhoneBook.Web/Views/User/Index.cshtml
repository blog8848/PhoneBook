@model PhoneBook.Web.ViewModels.ApplicationUserViewModel
@{
    Layout = "~/Views/Shared/_LoginSignup.cshtml";

}
<div class="pbFormTitle">Login to your Phonebook.</div>
@using (@Html.BeginForm("UserLogin", "User"))
{
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td>
                @Html.ValidationMessageFor(m => m.UserName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.UserName, new { @class = "frmLabel" })

            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(m => m.UserName, new { @class = "frmTextBox" })

            </td>
        </tr>
        <tr>
            <td>
                @Html.ValidationMessageFor(m => m.Password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Password, new { @class = "frmLabel" })<br />
            </td>
        </tr>
        <tr>
            <td>
                @Html.PasswordFor(m => m.Password, new { @class = "frmTextBox" })
            </td>

        </tr>
        <tr>
            <td><input type="submit" value="Login" /></td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Forgot Password?", "ForgotPassword")
            </td>
        </tr>
        <tr>
            <td>
                Don't have account.@Html.ActionLink("Sign Up?", "SignUp")
            </td>
        </tr>
    </table>
}
