@using PhoneBook.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="~/Contents/Styles/base.css" rel="stylesheet" />
    <link href="~/Contents/Styles/style.css" rel="stylesheet" />
    <script src="~/Contents/Scripts/jquery-1.8.2.js"></script>
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <style>
        #pbDashBoardWrapper {
            width: 100%;
            min-height: 600px;
        }

        .pbDashBoardTitle {
            margin-left: 15%;
            margin-right: 10%;
            width: 75%;
            height: 30px;
        }

        .pbDashBoardFilter {
            margin-left: 15%;
            margin-right: 10%;
            margin-top: 1%;
            margin-bottom: 1%;
            width: 75%;
            height: 30px;
        }

            .pbDashBoardFilter > div {
                display: inline-block;
            }



        #pbContactList {
            margin-left: 15%;
            margin-right: 10%;
            width: 75%;
            position: absolute;
        }

        .pbContactName {
            font-weight: bold;
        }

        .pbContact {
            width: 23%;
            display: inline-block;
            margin-right: 15px;
            margin-bottom: 15px;
            background-color: #0072C6;
        }

            .pbContact > div {
                padding: 5px 10px;
                color: white;
            }

            .pbContact > img {
                margin-left: 20%;
                padding: 10px;
                width: 50%;
                height: 50%;
            }

        .pbPopupWrapper {
            position: fixed;
            left: 50%;
            display: none;
            z-index: 102;
        }

        .pbPopup {
            position: relative;
            left: -50%;
            width: 100%;
            height: 100%;
            background-color: #fff;
            border-radius: 10px;
            overflow-y: auto;
            overflow-x: hidden;
        }

        #popUpMask {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: #000000;
            opacity: .2;
            filter: alpha(opacity=15);
            -moz-opacity: .15;
            z-index: 100;
            display: none;
        }

        .pbTable {
            display: table;
            padding: 10px;
        }

        .pbPopupTitle {
            font-weight: bold;
            background-color: #0061A8;
            color: #ffffff;
            padding: 5px;
        }

        .pbTableHeading {
            display: table-row;
            font-weight: bold;
            text-align: center;
        }

        .pbTableRow {
            display: table-row;
        }

        .pbTableCell {
            display: table-cell;
            padding: 5px 10px;
        }

        .pbPopUpClose {
            background: url("../Contents/Images/close.png") no-repeat;
            width: 16px;
            height: 16px;
        }
        .pbPopUpClose:hover {
            opacity: 0.7;
        }
    </style>
</head>
<body>
    <div id="pbDashBoardWrapper">
        <div class="pbDashBoardTitle">
            <div style="float: left;">
                <h1> Welcome! @PhoneBookSessionManager.LoggedInUserName </h1>
            </div>
            <div style="float: right;">
                <img src="~/Contents/Images/settings.png" title="Settings" />
            </div>
        </div>
        <div style="clear: both;"></div>
        <div class="pbDashBoardFilter">
            <div class="pbLeft" style="width: 33%;">
                Sort By:
                <select>
                    <option>First Name</option>
                    <option>Last Name</option>
                    <option>Address</option>
                </select>
            </div>
            <div class="pbLeft" style="width: 33%;">
                <input type="button" id="pbBtnNewContact" value="+ Add New Contact" />
            </div>
            <div class="pbRight"><input type="text" placeholder="Search Contact" /></div>
        </div>
        @RenderBody()
    </div>
</body>
</html>